<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFab"
    tools:context="net.net23.fahimabrar.teacherassistant.StudentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewArrowLeft"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/linear_layout_bg"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewArrow"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        app:srcCompat="@drawable/arrow" />

                    <TextView
                        android:id="@+id/textViewSubjectName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Student Details"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_dept_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorWhite">

                    <EditText
                        android:id="@+id/editTextIDE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ID"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_student_name_E"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/colorWhite">

                    <EditText
                        android:id="@+id/editTextStudentNameE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Student Name"
                        android:singleLine="false"
                        android:textColor="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/linear_layout_bg"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewSectionE"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="1dp"
                        app:srcCompat="@drawable/list" />

                    <TextView
                        android:id="@+id/selectSectionE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Marks"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_ct1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/colorWhite">

                    <EditText
                        android:id="@+id/editTextCt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CT 1"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_ct2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/colorWhite">

                    <EditText
                        android:id="@+id/editTextCt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CT 2"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_ct3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/colorWhite">

                    <EditText
                        android:id="@+id/editTextCt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CT 3"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_ct4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorWhite">

                    <EditText
                        android:id="@+id/editTextCt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CT 4"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorWhite"
                        android:visibility="gone" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_ct5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorWhite">

                    <EditText
                        android:id="@+id/editTextCt5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CT 5"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorWhite"
                        android:visibility="gone" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewArrowRight"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/right" />

    </LinearLayout>

</FrameLayout>
